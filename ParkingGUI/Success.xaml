<Window x:Class="ParkingGUI.Success"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkingGUI"
        mc:Ignorable="d" FontSize="20"
        Title="Success" Height="300" Width="400">
    <GroupBox Background="Green"
              Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label VerticalAlignment="Bottom" 
                   HorizontalAlignment="Center" 
                   Background="White"
                   Content="{Binding Path=LicenseNumberChecked}" 
                   Grid.Column="1"
                   Margin="10"/>
            <Image Source="Images\Checkmark.jpg"
                   Grid.Row="1"
                   Grid.Column="1" />
        </Grid>
    </GroupBox>
</Window>
