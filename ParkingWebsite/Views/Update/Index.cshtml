
@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1 class="display-4">Update</h1>
</div>
<br><br>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        @model ParkingWebsite.Models.ClientModel

        @using (Html.BeginForm("Result", "Update", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <label for="licenseNumber" class="col-sm-2 control-label">License number</label>
            <div class="form-group col-sm-10">
            @Html.TextBoxFor(model => model.LicensePlateNumber, new { @class = "form-control text-uppercase" })
            @Html.ValidationMessageFor(model => model.LicensePlateNumber)
            </div>
            <label for="parkingCode" class="col-sm-2 control-label">Parking code</label>
            <div class="form-group col-sm-10">
            @Html.TextBoxFor(model => model.CompanyParkingCode, new { @class = "form-control text-uppercase" })
            @Html.ValidationMessageFor(model => model.CompanyParkingCode)
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        }
    </div>
</div>
<div class="col-md-3"></div>

